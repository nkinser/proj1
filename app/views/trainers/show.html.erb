<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% if @trainer == current_trainer %>
	<p><%= button_to "New Pokemon!", pokemon_new_path, :class => "button medium", :method => :get %></p>
<% end %>
<h4>Pokemon</h4>
<% @pokemons.each do |p| %> 
  <p> <%= p.name %>, Level: <%= p.level %>, Health: <%= p.health %> <%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %></p> 
<% end %>